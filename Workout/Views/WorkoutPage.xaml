<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:Workout.ViewModels"
             xmlns:models="clr-namespace:Workout.Models"
             x:Class="Workout.Views.WorkoutPage"
             x:DataType="ViewModels:WorkoutViewModel"
             Title="{Binding Workout.Name}">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding WorkoutPlanExercises}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:WorkoutPlanExercise">
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="LightPink"
                                               Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeView.RightItems>
                                <Border Margin="10" Padding="10" BackgroundColor="LightGray">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding BindingContext.NavigationCommand,
                  Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding WorkoutPlanExerciseId}" FontSize="20" TextColor="Black"/>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <HorizontalStackLayout Padding="10">
                    <Button 
                        Text="+" 
                        FontAttributes="Bold" 
                        Margin="10"
                        Command="{Binding AddWithPopupCommand}"/> 
                    <Label 
                        Text="Übung dem Workout hinzufügen" 
                        VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>