<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Workout.Models"
             xmlns:viewModels="clr-namespace:Workout.ViewModels"
             x:Class="Workout.Views.ExercisePage"
             x:DataType="viewModels:ExerciseViewModel">
    <ScrollView>
        <VerticalStackLayout>
        <Label Text="Übungen" FontAttributes="Bold" FontSize="30" Margin="10,10,10,10" ></Label>
        <CollectionView ItemsSource="{Binding Exercises}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Exercise">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItem Text="Delete"
                                       BackgroundColor="LightPink"
                                       Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                       CommandParameter="{Binding .}"/>
                        </SwipeView.RightItems>
                        <Border Margin="10" Padding="10" BackgroundColor="LightGray">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.NavigationCommand,
                  Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Label Text="{Binding Name}" FontSize="20" TextColor="Black"/>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout Padding="10">
            <Button 
                Text="+" 
                FontAttributes="Bold" 
                Margin="10"
                Command="{Binding AddWithPopupCommand}"/> 
            <Label 
                Text="Übung hinzufügen" 
                VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>